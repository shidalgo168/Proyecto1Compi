!"recursive" Proc-Funcs "end"

let
  recursive
    func F() : Integer ~ 10
  and
    proc P (x : Integer) ~
        putint(x + T()) end
  and
    func T () : Integer ~ F()
  end; ! fin del recursive

  func A() : Integer ~ T();  !las declaraciones anteriores del recursive quedan visibles o "exportadas"
  proc B(x : Integer) ~ putint(x + C()) end;  ! No puede ver a C porque no est√° definida anteriormente, y solo lo permite el recursive
  func C() : Integer ~ A()
in
  P (F())
end